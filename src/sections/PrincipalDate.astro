    <h2 class="uppercase text-5xl font-semibold">4 DE MARZO<span aria-hidden class="hidden md:inline mx-1">·</span>
        <br aria-hidden class="block md:hidden" 
        /><span>
            <script is:inline>
                const END_DATE = 1709575200000
                const d = new Date(END_DATE)
                const date = d.toLocaleTimeString("es", {
                    hour : "2-digit",
                    minute : "2-digit",
                })
                //get current timezone
                const tzOffset = d.getTimezoneOffset() / 60 //pasamos a minutos
                const diff = tzOffset * -1 //para invertir la comparación
                const gmt = diff > 0 ? `GMT+${diff}` : `GMT+${Math.abs(diff)}`

                
                const TZ_DICTIONARY = {
                    "GMT+1" : "CET",
                }
                const tz = TZ_DICTIONARY[gmt] ?? gmt
                const selfScript = document.currentScript
                selfScript.parentNode.innerHTML = `${date}  ${tz}`
            </script>
        </span>
    </h2>
    <h3 class="uppercase text-2xl font-medium flex flex-col max-w-sm mt-6">
